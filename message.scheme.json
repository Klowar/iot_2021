{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "music": {
            "type": "string"
        },
        "settings": {
            "type": "object",
            "properties": {
                "repeat": {
                    "type": "integer"
                },
                "volume": {
                    "type": "integer"
                },
                "light": {
                    "type": "integer"
                }
            },
            "required": [
                "repeat",
                "volume",
                "light"
            ]
        }
    },
    "required": [
        "music",
        "settings"
    ]
}